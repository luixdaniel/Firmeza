@{
    ViewData["Title"] = "Portal de Administración - Firmeza";
}

<div class="min-vh-100 d-flex flex-column justify-content-center align-items-center bg-light">
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary mb-3">
            <i class="bi bi-shield-check"></i> Firmeza
        </h1>
        <h2 class="h4 text-muted mb-4">Portal de Administración</h2>
        <p class="lead text-secondary mb-5">
            Sistema de gestión para administradores
        </p>
    </div>

    <div class="card shadow-lg border-0" style="max-width: 500px; width: 100%;">
        <div class="card-body p-5">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="text-center">
                    <div class="alert alert-success mb-4">
                        <i class="bi bi-check-circle-fill"></i>
                        Sesión activa como <strong>@User.Identity.Name</strong>
                    </div>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" 
                           class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="bi bi-speedometer2"></i> Ir al Panel de Administración
                        </a>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            No tienes permisos de administrador
                        </div>
                    }
                    
                    <form method="post" action="/Identity/Account/Logout" class="mt-3">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                            <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="text-center">
                    <h3 class="h5 mb-4">Acceso para Administradores</h3>
                    <a href="/Identity/Account/Login" class="btn btn-primary btn-lg w-100 mb-3">
                        <i class="bi bi-key-fill"></i> Iniciar Sesión
                    </a>
                    <hr class="my-4">
                    <div class="alert alert-info text-start">
                        <strong><i class="bi bi-info-circle"></i> Nota:</strong>
                        <p class="mb-0 small">
                            Este es el portal de administración. Si eres cliente, 
                            accede al portal de clientes en el puerto 3000.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mt-4 text-center">
        <small class="text-muted">
            <i class="bi bi-shield-lock"></i> Portal seguro con ASP.NET Core Identity
        </small>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card {
            border-radius: 15px;
        }
        .btn-lg {
            padding: 12px 24px;
            font-size: 1.1rem;
        }
    </style>
}
