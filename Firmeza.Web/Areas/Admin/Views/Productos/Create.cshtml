@model Firmeza.Web.Areas.Admin.ViewModels.CreateProductViewModel
@{
    ViewData["Title"] = "Crear Producto";
}

<partial name="_Alerts" />

<div class="container mt-4">
    <h2>Crear Producto</h2>
    
    <form asp-action="Create" method="post" asp-antiforgery="true">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
        
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre del producto" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label">Descripci√≥n</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripci√≥n del producto"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Precio" class="form-label">Precio</label>
                <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="0.00" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            
            <div class="col-md-6 mb-3">
                <label asp-for="Stock" class="form-label">Stock</label>
                <input asp-for="Stock" type="number" class="form-control" placeholder="0" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3">
            <label asp-for="CategoriaId" class="form-label">Categor√≠a</label>
            <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId">
                <option value="">-- Selecciona una categor√≠a --</option>
            </select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
        
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">üíæ Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">‚ùå Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

