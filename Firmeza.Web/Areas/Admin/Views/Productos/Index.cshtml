@model IEnumerable<Firmeza.Web.Data.Entities.Producto>
@{
    ViewData["Title"] = "Productos";
}

<partial name="_Alerts" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Productos</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear nuevo producto
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>‚ÑπÔ∏è No hay productos registrados a√∫n.</strong>
        <p class="mb-0">Haz clic en "Crear nuevo producto" para agregar el primer producto al sistema.</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Descripci√≥n</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categor√≠a</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Nombre</strong></td>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio.ToString("C")</td>
                        <td>
                            @if (item.Stock <= 5)
                            {
                                <span class="badge bg-danger">@item.Stock</span>
                            }
                            else if (item.Stock <= 10)
                            {
                                <span class="badge bg-warning text-dark">@item.Stock</span>
                            }
                            else
                            {
                                <span class="badge bg-success">@item.Stock</span>
                            }
                        </td>
                        <td>@item.Categoria?.Nombre</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                    üëÅÔ∏è Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                    ‚úèÔ∏è Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                    üóëÔ∏è Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="mt-3">
        <p class="text-muted">Total de productos: <strong>@Model.Count()</strong></p>
    </div>
}

