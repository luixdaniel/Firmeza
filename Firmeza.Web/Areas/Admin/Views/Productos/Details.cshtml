@model Firmeza.Web.Areas.Admin.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <h2>Detalles del Producto</h2>
    
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9"><strong>@Model.Nombre</strong></dd>
                
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>
                
                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9"><h4 class="text-success">@Model.Precio.ToString("C")</h4></dd>
                
                <dt class="col-sm-3">Stock</dt>
                <dd class="col-sm-9">
                    @if (Model.Stock <= 5)
                    {
                        <span class="badge bg-danger fs-5">@Model.Stock unidades</span>
                    }
                    else if (Model.Stock <= 10)
                    {
                        <span class="badge bg-warning text-dark fs-5">@Model.Stock unidades</span>
                    }
                    else
                    {
                        <span class="badge bg-success fs-5">@Model.Stock unidades</span>
                    }
                </dd>
                
                <dt class="col-sm-3">Categoría</dt>
                <dd class="col-sm-9">@Model.CategoriaNombre</dd>
            </dl>
        </div>
    </div>
    
    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">✏️ Editar</a>
        <a asp-action="Index" class="btn btn-secondary">⬅️ Volver</a>
    </div>
</div>

