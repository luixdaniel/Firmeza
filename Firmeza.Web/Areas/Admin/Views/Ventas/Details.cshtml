@model Firmeza.Web.Data.Entities.Venta
@{
    ViewData["Title"] = "Detalle de Venta";
}

<partial name="_Alerts" />

<div class="container mt-4">
    <h2>Detalle de Venta #@Model.Id</h2>
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Información de la Venta</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Número de Factura</dt>
                <dd class="col-sm-9"><strong>@Model.NumeroFactura</strong></dd>
                
                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.FechaVenta.ToString("dd/MM/yyyy HH:mm")</dd>
                
                <dt class="col-sm-3">Cliente</dt>
                <dd class="col-sm-9">@Model.Cliente</dd>
                
                <dt class="col-sm-3">Método de Pago</dt>
                <dd class="col-sm-9">@Model.MetodoPago</dd>
                
                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9"><h4 class="text-success">@Model.Total.ToString("C")</h4></dd>
            </dl>
        </div>
    </div>
    
    @if (Model.Detalles?.Any() == true)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Productos Vendidos</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Precio Unitario</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.Detalles)
                            {
                                <tr>
                                    <td>@d.Producto?.Nombre</td>
                                    <td class="text-center">@d.Cantidad</td>
                                    <td class="text-end">@d.PrecioUnitario.ToString("C")</td>
                                    <td class="text-end"><strong>@d.Subtotal.ToString("C")</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <td class="text-end"><strong class="text-success">@Model.Total.ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    
    <div class="mt-3 d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </div>
</div>

