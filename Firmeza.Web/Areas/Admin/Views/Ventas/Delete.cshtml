@model Firmeza.Web.Data.Entities.Venta
@{
    ViewData["Title"] = "Eliminar Venta";
}

<partial name="_Alerts" />

<div class="container mt-4">
    <h2 class="text-danger">Eliminar Venta</h2>
    
    <div class="alert alert-warning">
        <h4>¿Estás seguro de que deseas eliminar esta venta?</h4>
        <p>Esta acción no se puede deshacer.</p>
    </div>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Venta: @Model.NumeroFactura</h5>
            <dl class="row">
                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.FechaVenta.ToString("dd/MM/yyyy HH:mm")</dd>
                
                <dt class="col-sm-3">Cliente</dt>
                <dd class="col-sm-9">@Model.Cliente</dd>
                
                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9"><strong>@Model.Total.ToString("C")</strong></dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Eliminar definitivamente</button>
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
        </div>
    </form>
</div>

