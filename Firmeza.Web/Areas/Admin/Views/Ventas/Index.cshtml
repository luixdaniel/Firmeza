@model IEnumerable<Firmeza.Web.Data.Entities.Venta>
@{
    ViewData["Title"] = "Gestión de Ventas";
    var totalVentas = Model?.Sum(v => v.Total) ?? 0;
    var ventasHoy = Model?.Count(v => v.FechaVenta.Date == DateTime.Today) ?? 0;
    var promedioVenta = Model?.Any() == true ? Model.Average(v => v.Total) : 0;
}

<partial name="_Alerts" />

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <h2 class="mb-1 text-primary">
                            <i class="bi bi-cart-check-fill me-2"></i>Ventas
                        </h2>
                        <p class="text-muted mb-0">
                            <i class="bi bi-info-circle me-1"></i>Historial y gestión de todas las ventas realizadas
                        </p>
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <div class="btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Exportacion" asp-action="ExportarVentasExcel" 
                               class="btn btn-success">
                                <i class="bi bi-file-earmark-excel me-1"></i>Excel
                            </a>
                            <a asp-area="Admin" asp-controller="Exportacion" asp-action="ExportarVentasPdf" 
                               class="btn btn-danger">
                                <i class="bi bi-file-earmark-pdf me-1"></i>PDF
                            </a>
                        </div>
                        <a class="btn btn-primary" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Nueva Venta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4 g-3">
    <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Total Ventas</p>
                        <h4 class="mb-0 fw-bold">@(Model?.Count() ?? 0)</h4>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded">
                        <i class="bi bi-receipt fs-4 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Ingresos Totales</p>
                        <h4 class="mb-0 fw-bold text-success">@totalVentas.ToString("C0")</h4>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded">
                        <i class="bi bi-currency-dollar fs-4 text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Ventas Hoy</p>
                        <h4 class="mb-0 fw-bold text-info">@ventasHoy</h4>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded">
                        <i class="bi bi-calendar-check fs-4 text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Ticket Promedio</p>
                        <h4 class="mb-0 fw-bold text-warning">@promedioVenta.ToString("C0")</h4>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded">
                        <i class="bi bi-graph-up fs-4 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <div class="mb-3">
                <i class="bi bi-cart-x display-1 text-muted"></i>
            </div>
            <h4 class="text-muted">No hay ventas registradas</h4>
            <p class="text-muted mb-4">Comienza registrando tu primera venta</p>
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle me-2"></i>Crear Primera Venta
            </a>
        </div>
    </div>
}
else
{
    <!-- Table Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">
                        <i class="bi bi-table me-2"></i>Historial de Ventas
                    </h5>
                </div>
                <div class="col-auto">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0" 
                               placeholder="Buscar venta...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="ventasTable">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">#</th>
                            <th class="px-4 py-3 fw-semibold">Fecha</th>
                            <th class="px-4 py-3 fw-semibold">Factura</th>
                            <th class="px-4 py-3 fw-semibold">Cliente</th>
                            <th class="px-4 py-3 fw-semibold">Método Pago</th>
                            <th class="px-4 py-3 fw-semibold text-end">Total</th>
                            <th class="px-4 py-3 fw-semibold text-center">Estado</th>
                            <th class="px-4 py-3 fw-semibold text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var venta in Model.OrderByDescending(v => v.FechaVenta))
                        {
                            <tr>
                                <td class="px-4 py-3">
                                    <span class="badge bg-light text-dark">#@venta.Id</span>
                                </td>
                                <td class="px-4 py-3">
                                    <div>
                                        <div class="fw-semibold">@venta.FechaVenta.ToLocalTime().ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">@venta.FechaVenta.ToLocalTime().ToString("hh:mm tt")</small>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-receipt-cutoff me-2 text-muted"></i>
                                        <span class="font-monospace fw-bold">@venta.NumeroFactura</span>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle-sm me-2">
                                            <span class="avatar-text-sm">@(venta.Cliente?.Substring(0, 1).ToUpper() ?? "?")</span>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@venta.Cliente</div>
                                            <small class="text-muted">Cliente ID: @venta.ClienteId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    @switch (venta.MetodoPago?.ToLower())
                                    {
                                        case "efectivo":
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">
                                                <i class="bi bi-cash me-1"></i>Efectivo
                                            </span>
                                            break;
                                        case "tarjeta":
                                            <span class="badge bg-primary-subtle text-primary border border-primary-subtle">
                                                <i class="bi bi-credit-card me-1"></i>Tarjeta
                                            </span>
                                            break;
                                        case "transferencia":
                                            <span class="badge bg-info-subtle text-info border border-info-subtle">
                                                <i class="bi bi-bank me-1"></i>Transferencia
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">
                                                <i class="bi bi-question-circle me-1"></i>@venta.MetodoPago
                                            </span>
                                            break;
                                    }
                                </td>
                                <td class="px-4 py-3 text-end">
                                    <div>
                                        <span class="fs-5 fw-bold text-success">@venta.Total.ToString("C")</span>
                                    </div>
                                    <small class="text-muted">
                                        @venta.Detalles?.Count() item(s)
                                    </small>
                                </td>
                                <td class="px-4 py-3 text-center">
                                    @switch (venta.Estado?.ToLower())
                                    {
                                        case "completada":
                                            <span class="badge rounded-pill bg-success px-3 py-2">
                                                <i class="bi bi-check-circle-fill me-1"></i>Completada
                                            </span>
                                            break;
                                        case "pendiente":
                                            <span class="badge rounded-pill bg-warning text-dark px-3 py-2">
                                                <i class="bi bi-clock-fill me-1"></i>Pendiente
                                            </span>
                                            break;
                                        case "cancelada":
                                            <span class="badge rounded-pill bg-danger px-3 py-2">
                                                <i class="bi bi-x-circle-fill me-1"></i>Cancelada
                                            </span>
                                            break;
                                        default:
                                            <span class="badge rounded-pill bg-info px-3 py-2">
                                                <i class="bi bi-info-circle-fill me-1"></i>@(venta.Estado ?? "N/A")
                                            </span>
                                            break;
                                    }
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@venta.Id" 
                                           class="btn btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-area="Admin" asp-controller="Exportacion" asp-action="DescargarRecibo" 
                                           asp-route-ventaId="@venta.Id" 
                                           class="btn btn-outline-success" title="Descargar recibo PDF">
                                            <i class="bi bi-file-earmark-pdf"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@venta.Id" 
                                           class="btn btn-outline-danger" title="Eliminar venta"
                                           onclick="return confirm('¿Está seguro de eliminar esta venta?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top py-3">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Mostrando @Model.Count() venta(s)
                </small>
                <small class="text-muted">
                    <i class="bi bi-clock-history me-1"></i>Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput')?.addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const table = document.getElementById('ventasTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
            
            for (let row of rows) {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            }
        });
    </script>
}

<style>
    .avatar-circle-sm {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .avatar-text-sm {
        color: white;
        font-weight: 600;
        font-size: 0.75rem;
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .table > tbody > tr {
        transition: all 0.2s ease;
    }
    
    .table > tbody > tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
        transform: translateX(2px);
    }
    
    .badge {
        font-weight: 500;
        letter-spacing: 0.3px;
    }
    
    .font-monospace {
        font-family: 'Courier New', monospace;
    }
</style>

