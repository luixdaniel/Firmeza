@model IEnumerable<Firmeza.Web.Data.Entities.Venta>
@{
    ViewData["Title"] = "Ventas";
}

<partial name="_Alerts" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Ventas</h2>
        <p class="text-muted">Historial y gestión de ventas</p>
    </div>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Nueva Venta
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="bi bi-info-circle"></i> No hay ventas registradas aún.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Fecha</th>
                    <th>Nro Factura</th>
                    <th>Cliente</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr>
                        <td>@v.Id</td>
                        <td>@v.FechaVenta.ToString("dd/MM/yyyy HH:mm")</td>
                        <td><strong>@v.NumeroFactura</strong></td>
                        <td>@v.Cliente</td>
                        <td><strong>@v.Total.ToString("C")</strong></td>
                        <td>
                            <a asp-action="Details" asp-route-id="@v.Id" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

