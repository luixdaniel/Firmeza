@model Firmeza.Web.Models.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = "Panel de Administración - Firmeza";
}

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient-primary text-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <h2 class="mb-2">
                                <i class="bi bi-speedometer2 me-2"></i>Bienvenido al Panel de Administración
                            </h2>
                            <p class="mb-0 opacity-75">
                                <i class="bi bi-calendar3 me-2"></i>@DateTime.Now.ToString("dddd, dd 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("es-ES"))
                            </p>
                        </div>
                        <div>
                            <i class="bi bi-graph-up-arrow display-3 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Stats Cards -->
    <div class="row g-4 mb-4">
        <!-- Productos Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted mb-1 small text-uppercase">Productos</p>
                            <h3 class="mb-0 fw-bold">@Model.TotalProductos</h3>
                        </div>
                        <div class="stats-icon bg-primary">
                            <i class="bi bi-box-seam text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <a asp-area="Admin" asp-controller="Productos" asp-action="Index" 
                           class="btn btn-sm btn-outline-primary">
                            Ver todos <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                        <div class="badge bg-primary-subtle text-primary">
                            <i class="bi bi-arrow-up"></i> Activo
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Clientes Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted mb-1 small text-uppercase">Clientes</p>
                            <h3 class="mb-0 fw-bold">@Model.TotalClientes</h3>
                        </div>
                        <div class="stats-icon bg-success">
                            <i class="bi bi-people text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <a asp-area="Admin" asp-controller="Clientes" asp-action="Index" 
                           class="btn btn-sm btn-outline-success">
                            Ver todos <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                        <div class="badge bg-success-subtle text-success">
                            <i class="bi bi-person-check"></i> Registrados
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ventas Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted mb-1 small text-uppercase">Ventas</p>
                            <h3 class="mb-0 fw-bold">@Model.TotalVentas</h3>
                        </div>
                        <div class="stats-icon bg-info">
                            <i class="bi bi-cart-check text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <a asp-area="Admin" asp-controller="Ventas" asp-action="Index" 
                           class="btn btn-sm btn-outline-info">
                            Ver todas <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                        <div class="badge bg-info-subtle text-info">
                            <i class="bi bi-receipt"></i> Total
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ingresos Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted mb-1 small text-uppercase">Ingresos Totales</p>
                            <h3 class="mb-0 fw-bold text-success">$0</h3>
                        </div>
                        <div class="stats-icon bg-warning">
                            <i class="bi bi-currency-dollar text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <a asp-area="Admin" asp-controller="Ventas" asp-action="Index" 
                           class="btn btn-sm btn-outline-warning">
                            Ver reporte <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                        <div class="badge bg-warning-subtle text-warning">
                            <i class="bi bi-graph-up"></i> Ventas
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-charge-fill text-warning me-2"></i>Acciones Rápidas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Productos" asp-action="Create" 
                               class="quick-action-card text-decoration-none">
                                <div class="card border-0 bg-primary bg-opacity-10 h-100">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-plus-circle fs-1 text-primary mb-2"></i>
                                        <h6 class="mb-0 text-primary">Nuevo Producto</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Clientes" asp-action="Create" 
                               class="quick-action-card text-decoration-none">
                                <div class="card border-0 bg-success bg-opacity-10 h-100">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-person-plus fs-1 text-success mb-2"></i>
                                        <h6 class="mb-0 text-success">Nuevo Cliente</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Ventas" asp-action="Create" 
                               class="quick-action-card text-decoration-none">
                                <div class="card border-0 bg-info bg-opacity-10 h-100">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-cart-plus fs-1 text-info mb-2"></i>
                                        <h6 class="mb-0 text-info">Nueva Venta</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Importacion" asp-action="Index" 
                               class="quick-action-card text-decoration-none">
                                <div class="card border-0 bg-warning bg-opacity-10 h-100">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-upload fs-1 text-warning mb-2"></i>
                                        <h6 class="mb-0 text-warning">Importar Datos</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Feature Cards -->
    <div class="row g-4">
        <!-- Importación Card -->
        <div class="col-12 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start">
                        <div class="feature-icon bg-success me-3">
                            <i class="bi bi-file-earmark-excel text-white fs-3"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-2">
                                <i class="bi bi-upload me-2"></i>Importación Masiva
                            </h5>
                            <p class="text-muted mb-3">
                                Importa productos, clientes y ventas desde archivos Excel de forma rápida y eficiente.
                            </p>
                            <a class="btn btn-success" asp-area="Admin" asp-controller="Importacion" asp-action="Index">
                                <i class="bi bi-file-earmark-excel me-2"></i>Ir a Importación
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Exportación Card -->
        <div class="col-12 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start">
                        <div class="feature-icon bg-danger me-3">
                            <i class="bi bi-download text-white fs-3"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-2">
                                <i class="bi bi-download me-2"></i>Exportación de Reportes
                            </h5>
                            <p class="text-muted mb-3">
                                Exporta reportes de productos, clientes y ventas en formato Excel o PDF.
                            </p>
                            <div class="btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Exportacion" asp-action="ExportarProductosExcel" 
                                   class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-file-earmark-excel me-1"></i>Productos
                                </a>
                                <a asp-area="Admin" asp-controller="Exportacion" asp-action="ExportarClientesExcel" 
                                   class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-file-earmark-excel me-1"></i>Clientes
                                </a>
                                <a asp-area="Admin" asp-controller="Exportacion" asp-action="ExportarVentasExcel" 
                                   class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-file-earmark-excel me-1"></i>Ventas
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .stats-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .stats-icon {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .quick-action-card .card {
        transition: all 0.3s ease;
    }
    
    .quick-action-card:hover .card {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }
    
    .feature-icon {
        width: 64px;
        height: 64px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .card {
        transition: all 0.3s ease;
    }
</style>
