                    <div class="text-white mb-2">
                        <small>ğŸ‘¤ @User.Identity!.Name</small>
                    </div>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                        <button type="submit" class="btn btn-light btn-sm w-100">
                            ğŸšª Cerrar sesiÃ³n
