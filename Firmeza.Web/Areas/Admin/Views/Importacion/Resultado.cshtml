@model Firmeza.Web.Models.ImportacionMasiva.ImportResultado
@{
    ViewData["Title"] = "Resultado de Importación";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-clipboard-check"></i> Resultado de Importación</h2>
            <p class="text-muted">Resumen del proceso de importación masiva</p>
        </div>
    </div>

    @if (Model != null)
    {
        <!-- Resumen general -->
        <div class="row mb-4">
            <div class="col-12">
                @if (Model.Exitoso)
                {
                    <div class="alert alert-success">
                        <h4><i class="bi bi-check-circle"></i> Importación Completada</h4>
                        <p class="mb-0">@Model.Mensaje</p>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <h4><i class="bi bi-exclamation-triangle"></i> Importación con Errores</h4>
                        <p class="mb-0">@Model.Mensaje</p>
                    </div>
                }
            </div>
        </div>

        <!-- Estadísticas -->
        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total Filas</h5>
                        <p class="card-text display-4">@Model.TotalFilas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Exitosas</h5>
                        <p class="card-text display-4">@Model.FilasExitosas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h5 class="card-title">Con Errores</h5>
                        <p class="card-text display-4">@Model.FilasConError</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Fecha</h5>
                        <p class="card-text">@Model.FechaImportacion.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detalles por entidad -->
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-box"></i> Productos</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-6">Creados:</dt>
                            <dd class="col-sm-6"><span class="badge bg-success">@Model.ProductosCreados</span></dd>
                            
                            <dt class="col-sm-6">Actualizados:</dt>
                            <dd class="col-sm-6"><span class="badge bg-warning text-dark">@Model.ProductosActualizados</span></dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-people"></i> Clientes</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-6">Creados:</dt>
                            <dd class="col-sm-6"><span class="badge bg-success">@Model.ClientesCreados</span></dd>
                            
                            <dt class="col-sm-6">Actualizados:</dt>
                            <dd class="col-sm-6"><span class="badge bg-warning text-dark">@Model.ClientesActualizados</span></dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-cart"></i> Ventas</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-6">Creadas:</dt>
                            <dd class="col-sm-6"><span class="badge bg-success">@Model.VentasCreadas</span></dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Log de errores -->
        @if (Model.Errores.Any())
        {
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="bi bi-exclamation-octagon"></i> Log de Errores (@Model.Errores.Count)</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Fila</th>
                                            <th>Entidad</th>
                                            <th>Campo</th>
                                            <th>Valor</th>
                                            <th>Error</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var error in Model.Errores)
                                        {
                                            <tr>
                                                <td><strong>@error.Fila</strong></td>
                                                <td>
                                                    @switch (error.TipoEntidad)
                                                    {
                                                        case "Producto":
                                                            <span class="badge bg-info">@error.TipoEntidad</span>
                                                            break;
                                                        case "Cliente":
                                                            <span class="badge bg-success">@error.TipoEntidad</span>
                                                            break;
                                                        case "Venta":
                                                            <span class="badge bg-warning text-dark">@error.TipoEntidad</span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@error.TipoEntidad</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>@error.Campo</td>
                                                <td><code>@error.Valor</code></td>
                                                <td>@error.Error</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No hay resultados de importación para mostrar.
        </div>
    }

    <!-- Botones de acción -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Nueva Importación
            </a>
            <a asp-area="Admin" asp-controller="Productos" asp-action="Index" class="btn btn-outline-info">
                <i class="bi bi-box"></i> Ver Productos
            </a>
            <a asp-area="Admin" asp-controller="Clientes" asp-action="Index" class="btn btn-outline-success">
                <i class="bi bi-people"></i> Ver Clientes
            </a>
            <a asp-area="Admin" asp-controller="Ventas" asp-action="Index" class="btn btn-outline-warning">
                <i class="bi bi-cart"></i> Ver Ventas
            </a>
        </div>
    </div>
</div>

