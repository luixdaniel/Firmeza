@model Firmeza.Web.Data.Entities.Cliente
@{
    ViewData["Title"] = "Detalles del Cliente";
}

<partial name="_Alerts" />

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-person-badge"></i> Detalles del Cliente</h2>
                    <p class="text-muted">Información completa y historial de compras</p>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Información Personal -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Información Personal</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" 
                             style="width: 100px; height: 100px; font-size: 48px;">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <h4 class="mt-3 mb-0">@Model.NombreCompleto</h4>
                        <span class="badge @(Model.Activo ? "bg-success" : "bg-danger")">
                            @(Model.Activo ? "Activo" : "Inactivo")
                        </span>
                        @if (!Model.Activo)
                        {
                            <div class="alert alert-warning mt-2 mb-0">
                                <i class="bi bi-exclamation-triangle"></i>
                                <small><strong>Este cliente no puede realizar compras mientras esté inactivo</strong></small>
                            </div>
                        }
                    </div>

                    <dl class="row">
                        <dt class="col-sm-5"><i class="bi bi-envelope"></i> Email:</dt>
                        <dd class="col-sm-7">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Telefono))
                        {
                            <dt class="col-sm-5"><i class="bi bi-telephone"></i> Teléfono:</dt>
                            <dd class="col-sm-7">
                                <a href="tel:@Model.Telefono">@Model.Telefono</a>
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Documento))
                        {
                            <dt class="col-sm-5"><i class="bi bi-credit-card-2-front"></i> Documento:</dt>
                            <dd class="col-sm-7">@Model.Documento</dd>
                        }

                        <dt class="col-sm-5"><i class="bi bi-calendar-check"></i> Registrado:</dt>
                        <dd class="col-sm-7">@Model.FechaRegistro.ToLocalTime().ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Información de Ubicación y Estadísticas -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Ubicación</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3"><i class="bi bi-house"></i> Dirección:</dt>
                        <dd class="col-sm-9">@Model.Direccion</dd>

                        @if (!string.IsNullOrEmpty(Model.Ciudad))
                        {
                            <dt class="col-sm-3"><i class="bi bi-building"></i> Ciudad:</dt>
                            <dd class="col-sm-9">@Model.Ciudad</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Pais))
                        {
                            <dt class="col-sm-3"><i class="bi bi-globe"></i> País:</dt>
                            <dd class="col-sm-9">@Model.Pais</dd>
                        }
                    </dl>
                </div>
            </div>

            <!-- Estadísticas de Compras -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Estadísticas de Compras</h5>
                </div>
                <div class="card-body">
                    @if (Model.Ventas != null && Model.Ventas.Any())
                    {
                        var totalCompras = Model.Ventas.Count;
                        var totalGastado = Model.Ventas.Sum(v => v.Total);
                        var ultimaCompra = Model.Ventas.OrderByDescending(v => v.FechaVenta).FirstOrDefault();

                        <div class="row text-center">
                            <div class="col-md-4 mb-3">
                                <div class="p-3 bg-light rounded">
                                    <h3 class="text-primary mb-0">@totalCompras</h3>
                                    <small class="text-muted">Total de Compras</small>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="p-3 bg-light rounded">
                                    <h3 class="text-success mb-0">$@totalGastado.ToString("N2")</h3>
                                    <small class="text-muted">Total Gastado</small>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="p-3 bg-light rounded">
                                    <h3 class="text-info mb-0">$@(totalCompras > 0 ? (totalGastado / totalCompras).ToString("N2") : "0.00")</h3>
                                    <small class="text-muted">Promedio por Compra</small>
                                </div>
                            </div>
                        </div>

                        @if (ultimaCompra != null)
                        {
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-clock-history"></i>
                                <strong>Última compra:</strong> @ultimaCompra.FechaVenta.ToLocalTime().ToString("dd/MM/yyyy HH:mm") - 
                                <strong>$@ultimaCompra.Total.ToString("N2")</strong>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle"></i>
                            Este cliente aún no ha realizado ninguna compra.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Historial de Ventas -->
    @if (Model.Ventas != null && Model.Ventas.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> Historial de Compras</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-light">
                                    <tr>
                                        <th>Factura</th>
                                        <th>Fecha</th>
                                        <th>Método de Pago</th>
                                        <th>Estado</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var venta in Model.Ventas.OrderByDescending(v => v.FechaVenta))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@venta.NumeroFactura</strong>
                                            </td>
                                            <td>
                                                <i class="bi bi-calendar3"></i>
                                                @venta.FechaVenta.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>
                                                @switch (venta.MetodoPago)
                                                {
                                                    case "Efectivo":
                                                        <span class="badge bg-success"><i class="bi bi-cash"></i> @venta.MetodoPago</span>
                                                        break;
                                                    case "Tarjeta":
                                                        <span class="badge bg-primary"><i class="bi bi-credit-card"></i> @venta.MetodoPago</span>
                                                        break;
                                                    case "Transferencia":
                                                        <span class="badge bg-info"><i class="bi bi-bank"></i> @venta.MetodoPago</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@venta.MetodoPago</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (venta.Estado)
                                                {
                                                    case "Completada":
                                                        <span class="badge bg-success">@venta.Estado</span>
                                                        break;
                                                    case "Pendiente":
                                                        <span class="badge bg-warning">@venta.Estado</span>
                                                        break;
                                                    case "Cancelada":
                                                        <span class="badge bg-danger">@venta.Estado</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@venta.Estado</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-end">
                                                <strong class="text-success">$@venta.Total.ToString("N2")</strong>
                                            </td>
                                            <td class="text-center">
                                                <a class="btn btn-sm btn-info" 
                                                   asp-area="Admin" 
                                                   asp-controller="Ventas" 
                                                   asp-action="Details" 
                                                   asp-route-id="@venta.Id"
                                                   title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Acciones Adicionales -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-tools"></i> Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil-square"></i> Editar Cliente
                        </a>
                        @if (Model.Activo)
                        {
                            <a class="btn btn-success" asp-area="Admin" asp-controller="Ventas" asp-action="Create">
                                <i class="bi bi-plus-circle"></i> Nueva Venta para este Cliente
                            </a>
                            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#desactivarModal">
                                <i class="bi bi-x-circle"></i> Desactivar Cliente
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#activarModal">
                                <i class="bi bi-check-circle"></i> Activar Cliente
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación para Desactivar -->
<div class="modal fade" id="desactivarModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">Confirmar Desactivación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro que desea desactivar a este cliente?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Edit" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Nombre" />
                    <input type="hidden" asp-for="Apellido" />
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Telefono" />
                    <input type="hidden" asp-for="Documento" />
                    <input type="hidden" asp-for="Direccion" />
                    <input type="hidden" asp-for="Ciudad" />
                    <input type="hidden" asp-for="Pais" />
                    <input type="hidden" asp-for="FechaRegistro" />
                    <input type="hidden" name="Activo" value="false" />
                    <button type="submit" class="btn btn-warning">Sí, Desactivar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación para Activar -->
<div class="modal fade" id="activarModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Confirmar Activación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro que desea activar a este cliente?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Edit" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Nombre" />
                    <input type="hidden" asp-for="Apellido" />
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Telefono" />
                    <input type="hidden" asp-for="Documento" />
                    <input type="hidden" asp-for="Direccion" />
                    <input type="hidden" asp-for="Ciudad" />
                    <input type="hidden" asp-for="Pais" />
                    <input type="hidden" asp-for="FechaRegistro" />
                    <input type="hidden" name="Activo" value="true" />
                    <button type="submit" class="btn btn-success">Sí, Activar</button>
                </form>
            </div>
        </div>
    </div>
</div>