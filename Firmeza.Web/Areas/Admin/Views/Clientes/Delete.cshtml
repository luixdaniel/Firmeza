@model Firmeza.Web.Data.Entities.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<partial name="_Alerts" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Atención:</strong> Esta acción no se puede deshacer.
                    </div>
                    
                    <p class="lead">¿Está seguro que desea eliminar este cliente?</p>
                    
                    <div class="card bg-light mb-3">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Cliente:</dt>
                                <dd class="col-sm-8"><strong>@Model.NombreCompleto</strong></dd>
                                
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>
                                
                                <dt class="col-sm-4">Documento:</dt>
                                <dd class="col-sm-8">@(Model.Documento ?? "No proporcionado")</dd>
                                
                                <dt class="col-sm-4">Teléfono:</dt>
                                <dd class="col-sm-8">@(Model.Telefono ?? "No proporcionado")</dd>
                                
                                <dt class="col-sm-4">Ciudad:</dt>
                                <dd class="col-sm-8">@(Model.Ciudad ?? "No especificada")</dd>
                                
                                <dt class="col-sm-4">Fecha de Registro:</dt>
                                <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                    
                    @if (Model.Ventas != null && Model.Ventas.Any())
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Advertencia:</strong> Este cliente tiene <strong>@Model.Ventas.Count venta(s)</strong> registrada(s).
                            Al eliminar el cliente, también se eliminarán sus ventas asociadas.
                        </div>
                    }
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Sí, Eliminar Cliente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

