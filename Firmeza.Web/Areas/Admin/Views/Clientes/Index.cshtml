@model IEnumerable<Firmeza.Web.Data.Entities.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<partial name="_Alerts" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Clientes</h2>
        <p class="text-muted">Gestión de clientes registrados</p>
    </div>
    <div>
        <div class="btn-group me-2" role="group">
            <a asp-area="Admin" asp-controller="Exportacion" asp-action="ExportarClientesExcel" class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Exportar Excel
            </a>
            <a asp-area="Admin" asp-controller="Exportacion" asp-action="ExportarClientesPdf" class="btn btn-danger">
                <i class="bi bi-file-earmark-pdf"></i> Exportar PDF
            </a>
        </div>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Nuevo Cliente
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="bi bi-info-circle"></i> No hay clientes registrados aún.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Documento</th>
                    <th>Teléfono</th>
                    <th>Ciudad</th>
                    <th>Estado</th>
                    <th>Fecha Registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Id</td>
                        <td>@cliente.NombreCompleto</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Documento</td>
                        <td>@cliente.Telefono</td>
                        <td>@cliente.Ciudad</td>
                        <td>
                            @if (cliente.Activo)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Activo - Puede comprar
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Inactivo - No puede comprar
                                </span>
                            }
                        </td>
                        <td>@cliente.FechaRegistro.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
