@model Firmeza.Web.Data.Entities.Cliente
@{
    ViewData["Title"] = "Crear Cliente";
}

<partial name="_Alerts" />

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Nuevo Cliente</h2>
            <hr />
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Información Personal</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre *</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre del cliente" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label">Apellido *</label>
                                <input asp-for="Apellido" class="form-control" placeholder="Apellido del cliente" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="correo@ejemplo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Documento" class="form-label">Documento</label>
                                <input asp-for="Documento" class="form-control" placeholder="DNI/CI/Pasaporte" />
                                <span asp-validation-for="Documento" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" type="tel" class="form-control" placeholder="+1234567890" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Dirección</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label">Dirección *</label>
                            <input asp-for="Direccion" class="form-control" placeholder="Calle, número, departamento" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ciudad" class="form-label">Ciudad</label>
                                <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                                <span asp-validation-for="Ciudad" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pais" class="form-label">País</label>
                                <input asp-for="Pais" class="form-control" placeholder="País" />
                                <span asp-validation-for="Pais" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Guardar Cliente
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
        
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle"></i> Información
                    </h5>
                    <p class="card-text">
                        Los campos marcados con <strong>*</strong> son obligatorios.
                    </p>
                    <hr />
                    <p class="card-text">
                        <small class="text-muted">
                            El cliente quedará activo automáticamente al crearlo.
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

