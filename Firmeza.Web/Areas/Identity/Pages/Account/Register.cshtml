@page
@model Firmeza.Web.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Crear Cuenta";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-person-plus"></i> Crear Cuenta Nueva
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <h5 class="border-bottom pb-2 mb-3">Información Personal</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Nombre" class="form-label"></label>
                                <input asp-for="Input.Nombre" class="form-control" placeholder="Ej: Juan" />
                                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Apellido" class="form-label"></label>
                                <input asp-for="Input.Apellido" class="form-control" placeholder="Ej: Pérez" />
                                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" type="email" placeholder="correo@ejemplo.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Telefono" class="form-label"></label>
                                <input asp-for="Input.Telefono" class="form-control" type="tel" placeholder="+123456789" />
                                <span asp-validation-for="Input.Telefono" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Documento" class="form-label"></label>
                            <input asp-for="Input.Documento" class="form-control" placeholder="DNI, CI o Pasaporte" />
                            <span asp-validation-for="Input.Documento" class="text-danger"></span>
                        </div>
                        
                        <h5 class="border-bottom pb-2 mb-3 mt-4">Dirección</h5>
                        <div class="mb-3">
                            <label asp-for="Input.Direccion" class="form-label"></label>
                            <input asp-for="Input.Direccion" class="form-control" placeholder="Calle, número, departamento" />
                            <span asp-validation-for="Input.Direccion" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Ciudad" class="form-label"></label>
                                <input asp-for="Input.Ciudad" class="form-control" placeholder="Ciudad" />
                                <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Pais" class="form-label"></label>
                                <input asp-for="Input.Pais" class="form-control" placeholder="País" />
                                <span asp-validation-for="Input.Pais" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <h5 class="border-bottom pb-2 mb-3 mt-4">Seguridad</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" type="password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <small class="form-text text-muted">Mínimo 6 caracteres</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Crear Cuenta
                            </button>
                            <a asp-page="./Login" class="btn btn-outline-secondary">
                                ¿Ya tienes cuenta? Inicia Sesión
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
